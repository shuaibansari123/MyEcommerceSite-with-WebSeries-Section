# ==============================================================================
# ShopEase E-commerce Platform - Environment Variables
# Copy this file to .env and update with your production values
# ==============================================================================

# ===================
# Django Configuration
# ===================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long-and-random
DJANGO_SETTINGS_MODULE=mac.settings

# ===================
# Database Configuration
# ===================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=shopease
DB_USER=shopease
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-secure-redis-password

# ===================
# Security Settings
# ===================
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ===================
# Superuser Configuration
# ===================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# ===================
# Application Settings
# ===================
LOAD_SAMPLE_DATA=false
SITE_NAME=ShopEase
SITE_URL=https://yourdomain.com

# ===================
# Email Configuration
# ===================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=ShopEase <noreply@yourdomain.com>

# ===================
# Monitoring & Logging
# ===================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# ===================
# Monitoring Tools (Optional)
# ===================
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password
GRAFANA_PASSWORD=your-grafana-password